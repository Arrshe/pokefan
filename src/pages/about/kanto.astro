---
import { getCollection } from "astro:content";
import MarkdownPostLayout from "../../layouts/MarkdownPostLayout.astro";

const about = await getCollection("about");

const kanto = about.find((aboutPage: { slug: string; }) => {
  return aboutPage.slug === "kanto";
}); // Accede al contenido de la pÃ¡gina de Kanto

const { Content } = await kanto!.render();
---

<MarkdownPostLayout frontmatter={kanto?.data}>
  <Content />
</MarkdownPostLayout>
